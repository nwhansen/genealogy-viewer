<Window x:Class="Genealogy.AboutDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Genealogy"
             mc:Ignorable="d" Height="250.98" Width="637.255">
    <Grid>
        <RichTextBox IsReadOnly="True" IsDocumentEnabled="True">
            <FlowDocument>
                <Paragraph>Genealogy Viewer</Paragraph>
                <Paragraph>An application designed to allow for viewing complex family trees.</Paragraph>
                <Paragraph>Application Developed By Nathan Hansen</Paragraph>
                <Paragraph>
                    <Run>Application Version</Run>
                    <Run x:Name="VersionLabel" />
                </Paragraph>
                <Paragraph>
                    <Run>For Application Support visit the</Run>
                    <Hyperlink x:Name="github" NavigateUri="https://github.com/nwhansen/genealogy-viewer/wiki" 
                               RequestNavigate="Hyperlink_RequestNavigate" Cursor="Hand">GitHub Here</Hyperlink>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
